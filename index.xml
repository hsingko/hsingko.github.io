            var sum = Array.from(result).map(a=&gt;parseInt(a.value)).reduce((a,b)=&gt;a+b, 0)
            if (sum&lt;=5) {
                alert(&#34;Score: &#34; + sum + &#34; No Depression&#34;)
            } else if (sum&lt;=10) {
                alert(&#34;Score: &#34; + sum + &#34; Normal but unhappy&#34;)
            } else if (sum&lt;=25) {
                alert(&#34;Score: &#34; + sum + &#34; Mild depression&#34;)
            } else if (sum&lt;=50) {
                alert(&#34;Score: &#34; + sum + &#34; Moderate depression&#34;)
            } else if (sum &lt;=75) {
                alert(&#34;Score: &#34; + sum + &#34; Severe depression&#34;)
            } else {
